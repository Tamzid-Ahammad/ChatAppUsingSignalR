@{
    ViewData["Title"] = "Chat";
}

<style>
    #dropbox {
        background-color: green;
        height: 150px;
        width: 150px;
        float: right;
        position: absolute;
        font-size: larger;
        vertical-align: central;
        text-align: center;
        top: 150px;
        right: 50px;
        border-radius: 20px;
    }

    img {
        height: 150px;
        width: 150px;
        border-radius: 10px;
        margin: 10px;
    }
</style>

<script src="~/microsoft/signalr/dist/browser/signalr.js"></script>

<div class="card">
    <header class="card-header">
        <h1>Chat</h1>
    </header>
    <div class="card-body">
        <div>
            <label for="txtInput">Input:</label>
            <input id="txtInput" class="form-control" required />
        </div>
        <br />
        <div>
            <input type="file" id="userFile" accept="image/*" />
            <div id="dropbox">
                Drop images here
            </div>
        </div>
        <br />
        <br />
        <button class="btn btn-outline-success" id="btnSend">Send</button>
    </div>
    <div class="card-footer">
        <ul id="chatLog"></ul>
    </div>
</div>
@section Scripts {

    <script src="~/js/chat.js"></script>


}
